<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Standard-out appender used for development -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %5p [%t] [%c:%L] - %m%n%ex
			</pattern>
		</encoder>
	</appender>

	<logger name="cz.jirutka.spring.exhandler.handlers.RestExceptionHandler" level="debug" />
	
	<root level="info">
		<appender-ref ref="stdout" />
	</root>

</configuration>